@{
	
    ViewData["Title"] = "Iniciando conversa - OpaSuite API";

}

<div class="row">
	<div class="col-md-4">
		<form method="post" action="~/Template/EnviarMensagem" id="formEnviar">
			<input type="hidden" name="clienteIds" id="clienteIds" value="@(ViewBag.clienteIds)" />




			
            <div class="form-group mb-2">
                <label class="control-label">Template</label>
				<select asp-items="@(ViewBag.Templates as SelectList)" name="templateid" id="templateid" class="form-control">
					<option value="">Selecione...</option>
				</select>
            </div>


			

			<button type="button" class="btn btn-light btn-roxinho" onclick="Enviar_Click()">Enviar</button>
		</form>
	</div>
</div>
<script src="~/pages/Template/Selecionar.js"></script>